<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="com.soda3x.aribeth.controllers.SettingsController">
  <padding>
    <Insets top="20" right="20" bottom="20" left="20" />
  </padding>

  <HBox alignment="CENTER_LEFT" spacing="15">
    <Label text="Settings" styleClass="section-header" />
  </HBox>

  <VBox>
    <HBox alignment="CENTER_LEFT" spacing="15">
      <Label text="Theme" />
      <ChoiceBox fx:id="themeChoiceBox">
        <items>
            <String fx:value="Dark" />
            <String fx:value="Light" />
        </items>
      </ChoiceBox>
    </HBox>
  </VBox>

</VBox>